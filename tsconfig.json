{
  "compilerOptions": {
    "esModuleInterop": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "module": "CommonJS",
    "lib": ["DOM", "ESNext"],
    "target": "ESnext",
    "rootDir": ".",
    "noEmit": false,
    "watch": true
  },
  "typeAcquisition": {
    "enable": true,
    "enableAutoDiscovery": true
  },
  "include": ["**/**/*.ts"]
}
